COMPOSE_PROJECT_NAME=woori-card-scope

NGINX_PORT=80

# ── MySQL 인증 (팀원 구현 완료 후 값 채우기) ──
MYSQL_ROOT_PASSWORD=root1234
MYSQL_REPL_PASSWORD=repl1234

APP_DB_NAME=card_db
APP_DB_USER=app
APP_DB_PASSWORD=app1234

# ── DB Source 연결 (팀원 구현 후 값 채우기) ──
DB_SOURCE_HOST=
DB_SOURCE_PORT=3306
DB_SOURCE_USER=
DB_SOURCE_PASSWORD=

# ── DB Replica 연결 (팀원 구현 후 값 채우기) ──
DB_REPLICA_HOST=
DB_REPLICA_PORT=3306
DB_REPLICA_USER=
DB_REPLICA_PASSWORD=

# ── Pool tuning ──
DB_SOURCE_MAX_POOL_SIZE=10
DB_REPLICA_MAX_POOL_SIZE=10

# ── Log tuning ──
LOG_LEVEL=INFO
LOG_MAX_FILE_SIZE=20MB
LOG_MAX_HISTORY_DAYS=14

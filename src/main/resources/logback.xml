<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="APP_NAME" value="${APP_NAME:-sample-project}"/>
    <property name="LOG_DIR" value="${LOG_DIR:-/usr/local/tomcat/logs}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${LOG_MAX_FILE_SIZE:-20MB}</maxFileSize>
            <maxHistory>${LOG_MAX_HISTORY_DAYS:-14}</maxHistory>
            <totalSizeCap>${LOG_TOTAL_SIZE_CAP:-2GB}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- HikariCP 모니터링 로거 -->
    <logger name="com.zaxxer.hikari" level="DEBUG"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="DEBUG"/>

    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLING_FILE" />
    </root>
</configuration>
